<%- include("../includes/header.ejs") %>
    <section class="pt-4 flex flex-wrap gap-y-2 gap-x-4 sm:justify-between items-center justify-center mb-12">
        <h1 class="text-center text-xl">Achievements</h1>
        <button class="border-2 px-4 py-2 bg-slate-800 rounded-3xl"><a href="/admin/add-achievement"><i class="fa-regular fa-plus"></i>&nbsp;Add Achievement</a></button>
    </section>
    <section>
        <% for(achievement of achievements) { %>
            <article class="h flex flex-col max-w-xs border-2 shadow-md duration-500 rounded-lg p-4 hover:-translate-y-2">
                <img src="/images/achievements/<%= achievement.name %>.jpg" class="mb-4 w-[200px]" loading="lazy">
                <p><%= achievement.description %></p>
                <ul class="flex gap-4 mt-8">
                    <li><a href="/admin/edit-achievement/<%= achievement._id %>?edit=true"><i class="fa-xl fa-solid fa-pen-to-square"></i></a></li>
                    <li>
                        <form action="/admin/delete-achievement" method="POST" class="m-0 p-0">
                            <input type="hidden" value="<%= achievement._id %>" name="achievementId">
                            <button type="submit"><i class="fa-xl fa-solid fa-trash"></i></button>
                        </form>
                    </li>
                </ul>
            </article>
        <% } %>
    </section>
<%- include("../includes/footer.ejs") %>