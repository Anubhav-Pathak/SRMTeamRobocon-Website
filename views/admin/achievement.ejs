<%- include("../includes/header.ejs") %>
    <section class="pt-4 flex gap-y-2 items-center justify-between mb-12 lg:px-[8vw]">
        <h1 class="text-center text-xl">Achievements</h1>
        <a class="w-12 h-12 rounded-full border-2 flex items-center justify-center" href="/admin/add-achievement"><i class="fa-2xl fa-regular fa-plus"></i></a>
    </section>
    <section class="flex flex-wrap gap-16">
        <% for(achievement of achievements) { %>
            <article class="flex flex-col w-96 border-2 shadow-md duration-500 rounded-lg p-4 hover:-translate-y-2 relative">
                <img src="/images/achievements/<%= achievement.name %>.jpg" class="mb-4 w-[200px]" loading="lazy">
                <p class="h-80 overflow-y-scroll scroll mb-12"><%= achievement.description %></p>
                <ul class="flex gap-4 p-4 absolute bg-primary bottom-0 left-0 right-0">
                    <li><a href="/admin/edit-achievement/<%= achievement._id %>?edit=true"><i class="fa-xl fa-solid fa-pen-to-square"></i></a></li>
                    <li>
                        <form action="/admin/delete-achievement" method="POST" class="m-0 p-0">
                            <input type="hidden" value="<%= achievement._id %>" name="achievementId">
                            <button type="submit"><i class="fa-xl fa-solid fa-trash"></i></button>
                        </form>
                    </li>
                </ul>
            </article>
        <% } %>
    </section>
<%- include("../includes/footer.ejs") %>